<StatusScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 2
        padding: 1
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.15, 1
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            cols: 2
            rows: 3
            spacing: 5
            padding: [10, 10]
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Bypass Status:"
                font_size: "20sp"
                size_hint_x: 0.6
            Label:
                id: bypass_status_label
                text: root.bypass_status_value
                font_size: "20sp"
                size_hint_x: 0.4

            Label:
                text: "Engine Hour:  "
                font_size: "20sp"
                size_hint_x: 0.5
            Label:
                id: engine_hour_label
                text: root.engine_hour_value
                font_size: "20sp"
                size_hint_x: 0.4

            BoxLayout:
                orientation: "vertical"
                spacing: 0
                size_hint_x: 0.6
                Label:
                    text: "Voltage:"
                    font_size: "20sp"
                    size_hint_x: 0.7
                Label:
                    text: "toggle bypass to refresh"
                    font_size: "14sp"
                    size_hint_x: 1
            Label:
                id: voltage_label
                text: root.voltage_value
                font_size: "20sp"
                size_hint_x: 0.4