<OptionScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 2
        padding: 0
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.15, 1
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            cols: 2  # 2 columns for a 3x2 grid
            rows: 3  # 3 rows to fit 6 options
            spacing: 25
            padding: 10
            size_hint_y: 0.9
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.2, 1 
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Detections
            BoxLayout:
                orientation: "vertical"
                spacing: 2
                size_hint_y: None
                height: 80 
                opacity: 1  
                disabled: False

                Image:
                    source: "assets/detection_icon.png"
                    size_hint: None, None
                    size: 64, 64 
                    fit_mode: 'contain'
                    pos_hint: {'center_x': 0.5}
                Button:
                    id: detection_btn
                    text: "Detections"
                    font_size: "12sp"  # Small font for readability
                    size_hint_y: None
                    height: 20
                    background_normal: ''
                    background_color: [0, 0, 0, 0]  # Transparent background
                    on_release: root.on_detection_btn_click()

            # Calibrations
            BoxLayout:
                orientation: "vertical"
                spacing: 2
                size_hint_y: None
                height: 80
                opacity: 1  
                disabled: False

                Image:
                    source: "assets/calibration_icon.png"
                    size_hint: None, None
                    size: 64, 64
                    fit_mode: 'contain'
                    pos_hint: {'center_x': 0.5}
                Button:
                    id: calibration_btn
                    text: "Calibrations"
                    font_size: "12sp"
                    size_hint_y: None
                    height: 20
                    background_normal: ''
                    background_color: [0, 0, 0, 0]
                    on_release: root.on_calibration_btn_click()

            # Analyzer
            BoxLayout:
                orientation: "vertical"
                spacing: 2
                size_hint_y: None
                height: 80
                opacity: 0 if root.analyzer_hidden else 1
                disabled: root.analyzer_hidden

                Image:
                    source: "assets/analyzer_icon.png"
                    size_hint: None, None
                    size: 64, 64
                    fit_mode: 'contain'
                    pos_hint: {'center_x': 0.5}
                Button:
                    id: analyzer_btn
                    text: "Analyzer"
                    font_size: "12sp"
                    size_hint_y: None
                    height: 20
                    background_normal: ''
                    background_color: [0, 0, 0, 0]
                    on_release: root.on_analyzer_btn_click()

            # Settings
            BoxLayout:
                orientation: "vertical"
                spacing: 2
                size_hint_y: None
                height: 80
                opacity: 1  
                disabled: False

                Image:
                    source: "assets/setting_icon.png"
                    size_hint: None, None
                    size: 64, 64
                    fit_mode: 'contain'
                    pos_hint: {'center_x': 0.5}
                Button:
                    id: setting_btn
                    text: "Settings"
                    font_size: "12sp"
                    size_hint_y: None
                    height: 20
                    background_normal: ''
                    background_color: [0, 0, 0, 0]
                    on_release: root.on_setting_btn_click()

            # Status
            BoxLayout:
                orientation: "vertical"
                spacing: 2
                size_hint_y: None
                height: 80
                opacity: 1  
                disabled: False

                Image:
                    source: "assets/status_icon.png"
                    size_hint: None, None
                    size: 64, 64
                    fit_mode: 'contain'
                    pos_hint: {'center_x': 0.5}
                Button:
                    id: status_btn
                    text: "Status"
                    font_size: "12sp"
                    size_hint_y: None
                    height: 20
                    background_normal: ''
                    background_color: [0, 0, 0, 0]
                    on_release: root.on_status_btn_click()

            # Exit
            BoxLayout:
                orientation: "vertical"
                spacing: 2
                size_hint_y: None
                height: 80
                opacity: 1  
                disabled: False

                Image:
                    source: "assets/exit_icon.png"
                    size_hint: None, None
                    size: 64, 64
                    fit_mode: 'contain'
                    pos_hint: {'center_x': 0.5}
                Button:
                    id: exit_btn
                    text: "Exit"
                    font_size: "12sp"
                    size_hint_y: None
                    height: 20
                    background_normal: ''
                    background_color: [0, 0, 0, 0]
                    on_release: root.on_exit_btn_click()
