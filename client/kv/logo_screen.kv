<LogoScreen>:
    id: logo_screen
    BoxLayout:
        orientation: "vertical"
        padding: 0
        spacing: 0
        size_hint: (1, 1)
        
        Label:
            text: root.title
            size_hint: (1, 0.9)
            fit_mode: 'fill'
            font_size: "50sp"
            bold: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Label:
            text: root.version
            font_size: "30sp"
            size_hint: (1, 0.1)
            halign: "center"
            valign: "middle"
