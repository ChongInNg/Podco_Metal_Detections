<LogoScreen>:
    id: logo_screen
    BoxLayout:
        orientation: "vertical"
        padding: 0
        spacing: 0
        size_hint: (1, 1)
        
        Label:
            text: "   STEEL\nSTOPPER"
            size_hint: (1, 0.9)
            allow_stretch: True
            keep_ratio: False
            font_size: "50sp"
            bold: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Label:
            text: "Version 1.0"
            font_size: "30sp"
            size_hint: (1, 0.1)
            halign: "center"
            valign: "middle"
