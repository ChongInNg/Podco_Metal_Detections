<SettingScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 5
        padding: 5
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.15, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: "vertical"
            spacing: 5
            padding: [5, 5]
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: "horizontal"
                spacing: 10
                size_hint_y: 0.12  
                
                Label:
                    text: "Bypass Status:"
                    font_size: "15sp"
                    size_hint_x: 0.5
                
                Label:
                    id: bypass_status_label
                    text: root.bypass_status_value
                    font_size: "15sp"
                    size_hint_x: 0.5

            # Brightness Adjustment
            BoxLayout:
                orientation: "horizontal"
                spacing: 10
                size_hint_y: 0.12
                Label:
                    text: "Brightness:"
                    font_size: "15sp"
                    size_hint_x: 0.5
                Slider:
                    id: brightness_slider
                    min: 0
                    max: 100
                    value: root.brightness
                    size_hint_x: 1
                    on_value: root.on_brightness_change(self.value)
                    canvas.before:
                        Color:
                            rgba: root.slider_color
                        Rectangle:
                            pos: self.x + 5, self.y + (self.height * 0.2)
                            size: self.width - 10, self.height * 0.6
                Label:
                    id: brightness_value_label
                    text: str(int(root.brightness))
                    font_size: "12sp"
                    size_hint_x: 0.1

            BoxLayout:
                orientation: "horizontal"
                spacing: 10
                size_hint_y: 0.1
                Label:
                    text: "Reset to Factory:"
                    font_size: "15sp"
                    size_hint_x: 0.5
                    size_hint_y: 0.5  
                Button:
                    id: reset_factory_btn
                    text: "Reset"
                    size_hint_x: 0.5  
                    size_hint_y: 0.5  
                    font_size: "15sp"
                    on_release: root.on_reset_factory_click()
                    background_color: root.reset_button_color

            BoxLayout:
                orientation: "horizontal"
                spacing: 10
                size_hint_y: 0.1  
                Label:
                    text: "Log Backup:"
                    font_size: "15sp"
                    size_hint_x: 0.5 
                    size_hint_y: 0.5  
                Button:
                    id: copy_log_btn
                    text: "Copy Log"
                    size_hint_x: 0.5  
                    size_hint_y: 0.5  
                    font_size: "15sp"
                    opacity: 1  
                    disabled: False
                    on_release: root.on_copy_log_click()

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            padding: [20, 10]
            size_hint_y: 0.12
            Label:
                text: "  "
                size_hint_x: 1
            Button:
                id: back_btn
                text: "Back"
                font_size: "15sp"
                size_hint_x: 0.5
                size_hint_y: 1
                on_release: root.on_back_btn_click()
