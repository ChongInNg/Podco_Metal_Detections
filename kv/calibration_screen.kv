<CalibrationScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 1
        padding: [1, 0, 1, 1]  # Left, Top, Right, Bottom

        # Data Section
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.3
            #height: dp(100) 
            spacing: 5
            padding: [5, 1, 5, 0]
            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 0.9, 1  
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            BoxLayout:
                orientation: 'horizontal'
                spacing: 5
                Label:
                    text: 'T'
                    font_size: '30sp'
                    size_hint_x: 0.3
                    
                    bold: True
                    color: 0.2, 0.4, 0.8, 1  # Blue text
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                Label:
                    text: root.current_T
                    font_size: '30sp'
                    size_hint_x: 0.7
                    color: 0, 0, 0, 1  # Black text
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            BoxLayout:
                orientation: 'horizontal'
                spacing: 5
                Label:
                    text: 'D'
                    font_size: '30sp'
                    
                    size_hint_x: 0.3
                    bold: True
                    color: 0.2, 0.4, 0.8, 1  # Blue text
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                Label:
                    text: root.current_D
                    font_size: '30sp'
                    size_hint_x: 0.7
                    color: 0, 0, 0, 1  # Black text
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        # Grid Section
        GridLayout:
            cols: 3
            spacing: [5, 5]
            padding: [5, 1, 5, 1]
            size_hint_y: 1
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.95, 1  
                Rectangle:
                    pos: self.pos
                    size: self.size

            # First row: Empty, CH1, CH2
            Label:
                text: ""
                size_hint_x: 0.2
                
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: "CH1"
                font_size: '30sp'
                bold: True
                size_hint_x: 0.4
                color: 0.2, 0.6, 0.2, 1  # Green text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: "CH2"
                font_size: '30sp'
                bold: True
                size_hint_x: 0.4
                color: 0.2, 0.6, 0.2, 1  # Green text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            # Second row: P, value for CH1, value for CH2
            Label:
                text: "P"
                font_size: '30sp'
                size_hint_x: 0.2
                
                bold: True
                color: 0.8, 0.2, 0.2, 1  # Red text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: root.current_CH1_P
                font_size: '30sp'
                size_hint_x: 0.4
                color: 0, 0, 0, 1  # Black text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: root.current_CH2_P
                font_size: '30sp'
                size_hint_x: 0.4
                color: 0, 0, 0, 1  # Black text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            # Third row: N, value for CH1, value for CH2
            Label:
                text: "N"
                font_size: '30sp'
                size_hint_x: 0.2
                bold: True
                
                color: 0.8, 0.2, 0.2, 1  # Red text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: root.current_CH1_N
                font_size: '30sp'
                size_hint_x: 0.4
                color: 0, 0, 0, 1  # Black text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: root.current_CH2_N
                font_size: '30sp'
                size_hint_x: 0.4
                color: 0, 0, 0, 1  # Black text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            # Fourth row: M, value for CH1, value for CH2
            Label:
                text: "M"
                font_size: '30sp'
                size_hint_x: 0.2
                bold: True
                
                color: 0.8, 0.2, 0.2, 1  # Red text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: root.current_CH1_M
                font_size: '30sp'
                size_hint_x: 0.4
                color: 0, 0, 0, 1  # Black text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: root.current_CH2_M
                font_size: '30sp'
                size_hint_x: 0.4
                color: 0, 0, 0, 1  # Black text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
