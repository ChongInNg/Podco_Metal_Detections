<ScreenHeader>:
    title: ''  
    size_hint_y: None
    height: dp(80)
    canvas.before:
        Color:
            rgba: 0.2, 0.25, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    ImageButton:
        id: back_button
        size_hint_x: None
        size_hint_y: None
        source: 'assets/left_icon.png'
        on_release: root.on_back_clicked()
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    Label:
        font_size: "40sp"
        text: root.title
        bold: True
        color: 0.9, 0.9, 1, 1
        
    ImageButton:
        id: next_button
        size_hint_x: None
        size_hint_y: None
        source: 'assets/right_icon.png'
        on_release: root.on_next_clicked()
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
