<ScreenHeader>:
    title: ''  # Default empty title
    show_back: True  # Whether to show the back button
    size_hint_y: None
    height: dp(30)
    canvas.before:
        Color:
            rgba: 0.2, 0.25, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Button:
        text: 'Back'
        size_hint_x: None
        width: dp(60)
        background_normal: ''
        background_color: 0.3, 0.4, 0.5, 1
        bold: True
        opacity: 1 if root.show_back else 0
        disabled: not root.show_back
        on_release: app.root.current = 'main' if root.show_back else ''
    
    Label:
        text: root.title
        bold: True
        color: 0.9, 0.9, 1, 1
