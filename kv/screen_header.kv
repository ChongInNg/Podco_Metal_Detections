<ScreenHeader>:
    title: ''  
    size_hint_y: None
    height: dp(80)
    canvas.before:
        Color:
            rgba: 0.2, 0.25, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    Button:
        id: back_button
        text: 'Back'
        font_size: 30
        size_hint_x: None
        width: dp(100)
        background_normal: ''
        background_color: 0.3, 0.4, 0.5, 1
        bold: True
        on_release: root.on_back_clicked()
    
    Label:
        font_size: 30
        text: root.title
        bold: True
        color: 0.9, 0.9, 1, 1
        
    Button:
        id: next_button
        text: 'Next'
        font_size: 30
        size_hint_x: None
        width: dp(100)
        background_normal: ''
        background_color: 0.3, 0.4, 0.5, 1
        bold: True
        on_release: root.on_next_clicked()
