<DetectionScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 5
        padding: 5
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.15, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            padding: 10
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Detections Screen"
                font_size: "20sp"
