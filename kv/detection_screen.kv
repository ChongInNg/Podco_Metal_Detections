<DetectionScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        padding: [5, 0, 5, 5]  # Left, Top, Right, Bottom

        # Header Section
        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            size_hint_y: None
            height: dp(48)
            canvas.before:
                Color:
                    rgba: 0.2, 0.3, 0.4, 1 
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: root.current_page
                font_size: '30sp'
                bold: True
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                color: 1, 1, 1, 1  

            Label:
                size_hint_x: 1
            
            ImageButton:
                id: up_btn
                size_hint_x: None
                size_hint_y: None
                source: 'assets/up_icon.png'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release: root.on_up_pressed()

            ImageButton:
                id: down_btn
                size_hint_x: None
                size_hint_y: None
                source: 'assets/down_icon.png'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release: root.on_down_pressed()

            Label:
                size_hint_x: 1

            Label:
                text: '     '
                font_size: '30sp'

        # Data Section
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(100) 
            spacing: 5
            padding: [10, 10, 10, 10]
            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 0.9, 1  
                Rectangle:
                    pos: self.pos
                    size: self.size
            
            BoxLayout:
                orientation: 'horizontal'
                spacing: 5
                Label:
                    text: 'T'
                    font_size: '30sp'
                    size_hint_x: 0.3
                    width: 50
                    bold: True
                    color: 0.2, 0.4, 0.8, 1  # Blue text
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                Label:
                    text: root.current_T
                    font_size: '30sp'
                    size_hint_x: 0.7
                    color: 0, 0, 0, 1  # Black text
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            BoxLayout:
                orientation: 'horizontal'
                spacing: 5
                Label:
                    text: 'D'
                    font_size: '30sp'
                    width: 50
                    size_hint_x: 0.3
                    bold: True
                    color: 0.2, 0.4, 0.8, 1  # Blue text
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                Label:
                    text: root.current_D
                    font_size: '30sp'
                    size_hint_x: 0.7
                    color: 0, 0, 0, 1  # Black text
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        # Grid Section
        GridLayout:
            cols: 3
            spacing: [10, 10]
            padding: [10, 10, 10, 10]
            size_hint_y: 1
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.95, 1  
                Rectangle:
                    pos: self.pos
                    size: self.size

            # First row: Empty, CH1, CH2
            Label:
                text: ""
                size_hint_x: None
                width: 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: "CH1"
                font_size: '30sp'
                bold: True
                size_hint_x: 0.5
                color: 0.2, 0.6, 0.2, 1  # Green text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: "CH2"
                font_size: '30sp'
                bold: True
                size_hint_x: 0.5
                color: 0.2, 0.6, 0.2, 1  # Green text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            # Second row: P, value for CH1, value for CH2
            Label:
                text: "P"
                font_size: '30sp'
                size_hint_x: None
                width: 50
                bold: True
                color: 0.8, 0.2, 0.2, 1  # Red text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: root.current_CH1_P
                font_size: '30sp'
                size_hint_x: 0.5
                color: 0, 0, 0, 1  # Black text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: root.current_CH2_P
                font_size: '30sp'
                size_hint_x: 0.5
                color: 0, 0, 0, 1  # Black text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            # Third row: N, value for CH1, value for CH2
            Label:
                text: "N"
                font_size: '30sp'
                size_hint_x: None
                bold: True
                width: 50
                color: 0.8, 0.2, 0.2, 1  # Red text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: root.current_CH1_N
                font_size: '30sp'
                size_hint_x: 0.5
                color: 0, 0, 0, 1  # Black text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: root.current_CH2_N
                font_size: '30sp'
                size_hint_x: 0.5
                color: 0, 0, 0, 1  # Black text
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
