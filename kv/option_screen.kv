<OptionScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 5
        padding: 5

        BoxLayout:
            orientation: "vertical"
            spacing: 10
            padding: 10
            size_hint_y: 0.9
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            # "Detections"
            BoxLayout:
                orientation: "horizontal"
                spacing: 10
                size_hint_y: 1

                Image:
                    source: "assets/detection_icon.png"
                    size_hint: None, None
                    size: 80, 80
                    allow_stretch: True
                    keep_ratio: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                Button:
                    id: detection_btn
                    text: "Detections"
                    on_release: root.on_detection_btn_click()
                    font_size: 30
                   

            # "Calibrations"
            BoxLayout:
                orientation: "horizontal"
                spacing: 10
                size_hint_y: 1

                Image:
                    source: "assets/calibration_icon.png"
                    size_hint: None, None
                    size: 80, 80
                    allow_stretch: True
                    keep_ratio: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                Button:
                    id: calibration_btn
                    text: "Calibrations"
                    on_release: root.on_calibration_btn_click()
                    font_size: 30

            # "Analyzer"
            BoxLayout:
                orientation: "horizontal"
                spacing: 10
                size_hint_y: 1

                Image:
                    source: "assets/analyzer_icon.png"
                    size_hint: None, None
                    size: 80, 80
                    allow_stretch: True
                    keep_ratio: True
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                Button:
                    id: analyzer_btn
                    text: "Analyzer"
                    on_release: root.on_analyzer_btn_click()
                    font_size: 30

