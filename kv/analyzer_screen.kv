<AnalyzerScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 1
        padding: 1
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.15, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        BoxLayout:
            orientation: "vertical"
            spacing: 1
            padding: 1
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Analyzer Screen"
                font_size: "30sp"
