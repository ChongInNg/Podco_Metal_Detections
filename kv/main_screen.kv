<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 5
        padding: 5
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.15, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        ScreenHeader:
            title: root.title
            show_back: False
        
        BoxLayout:
            orientation: "vertical"
            spacing: 10
            padding: 10
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: "Detections"
                on_release: app.root.current = "detection"

            Button:
                text: "Calibrations"
                on_release: app.root.current = "calibration"

            Button:
                text: "Analyzer"
                on_release: app.root.current = "analyzer"
